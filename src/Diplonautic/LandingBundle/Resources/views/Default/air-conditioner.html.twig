{% extends 'DiplonauticLandingBundle::layout.html.twig' %}
{%trans_default_domain 'general'%}
{% block content %}
    {% include "DiplonauticLandingBundle:Default:header.html.twig" %}
    <div class="main">
        
        <section>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-8 main-description-product">
                        <div class="row">
                            <div class="col-sm-1">
                                <img src="{{ asset("bundles/diplonauticlanding/images/Picto2.png")}}" alt="">
                            </div>
                            <div class="col-sm-10 col-sm-offset-1">
                                <h1 class="h4">{%trans%}products.ac.title{%endtrans%}</h1>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <p>{%trans%}air.intro{%endtrans%}
                                    <ul>
                                        <li>{%trans%}air.compact_machine{%endtrans%}</li>
                                        <li>{%trans%}air.split_machine{%endtrans%}</li>
                                        <li>{%trans%}air.chiller_machine{%endtrans%}</li>
                                    </ul>
                                </p>
                            </div>
                            <div class="col-sm-4 col-sm-offset-1">
                                <p>{%trans%}air.closing{%endtrans%}</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-sm-1 col-sm-offset-2 languages">
                        <div id="cat">
                            <a href="{{path("diplonautic_landing_homepage", { "_locale" : "ca" })}}">CAT</a>
                        </div>
                        
                        <div id="en">
                            <a href="{{path("diplonautic_landing_homepage", { "_locale" : "en" })}}">EN</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
