{% extends 'DiplonauticLandingBundle::layout.html.twig' %}
{%trans_default_domain 'general'%}
{% block meta_description %}{%trans%}meta.ac{%endtrans%}{% endblock %}
{% block meta_title %}{%trans%}tooltip.ac{%endtrans%} - Diplonautic{% endblock %}
{% block title %}{%trans%}tooltip.ac{%endtrans%} - Diplonautic{% endblock %}
{% block content %}
    {% include "DiplonauticLandingBundle:Default:header.html.twig" %}
    <div class="main">
        
        <section>
            <div class="container-fluid">
                <div class="row">
                    <div class="main-index no-padding col-sm-11">
                        <div class=" col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-0 col-md-8 main-description-product">
                            <div class="row">
                                <div class="col-sm-1 small-picto">
                                    <img src="{{ asset("bundles/diplonauticlanding/images/Picto2.png")}}" alt="{%trans%}products.ac.title{%endtrans%} - Diplonautic">
                                </div>
                                <div class="col-sm-10 product-title">
                                    <h1 class="h4">{%trans%}products.ac.title{%endtrans%}</h1>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-5 product-description">
                                    <p>{%trans%}air.intro{%endtrans%}
                                        <ul>
                                            <li>{%trans%}air.compact_machine{%endtrans%}</li>
                                            <li>{%trans%}air.split_machine{%endtrans%}</li>
                                            <li>{%trans%}air.chiller_machine{%endtrans%}</li>
                                        </ul>
                                    </p>
                                </div>
                                <div class="col-sm-5">
                                    <p>{%trans%}air.closing{%endtrans%}</p>
                                {#    <p class="link-products">{%trans%}air.message_link{%endtrans%}<a href="#"><strong>LINK</strong></a></p>#}
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-10 col-xs-offset-1 col-sm-2 col-sm-offset-0 col-md-4 main-marks-products">
                            <div class="row">
                                    <a href="http://www.cruisair.com/International/" title="{%trans%}visit{%endtrans%} Cruisair" rel="nofollow">
                                        <img class="pull-left three" src="{{ asset("bundles/diplonauticlanding/images/Cruisair.jpg") }}" alt="Cruisair">
                                    </a>
                                    <a href="http://www.marineair.com/International/" title="{%trans%}visit{%endtrans%} Marine Air" rel="nofollow">
                                        <img class="pull-left three" src="{{ asset("bundles/diplonauticlanding/images/MarineAir.png") }}" alt="Marine Air">
                                    </a>
                                    <a href="http://www.veco.net" title="{%trans%}visit{%endtrans%} Climma" rel="nofollow">
                                        <img class="pull-left three" src="{{ asset("bundles/diplonauticlanding/images/Climma.jpg") }}" alt="Climma">
                                    </a>
                            </div>
                            <div class="row">
                                    <a href="http://www.frigomar.com/en/" title="{%trans%}visit{%endtrans%} Frigomar" rel="nofollow">
                                        <img class="pull-left three" src="{{ asset("bundles/diplonauticlanding/images/Frigomar.gif") }}" alt="Frigomar">
                                    </a>
                                    <a href="http://www.condaria.com/English/" title="{%trans%}visit{%endtrans%} Condaria" rel="nofollow">
                                        <img class="pull-left three" src="{{ asset("bundles/diplonauticlanding/images/Condaria.jpg") }}" alt="Condaria">
                                    </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-1 languages hidden-xs">
                        <div id="cat">
                            <a href="{{path("diplonautic_landing_homepage", { "_locale" : "ca" })}}" {% if app.request.locale == 'ca'%}class="active"{% endif %} title="{%trans%}languages.cat{%endtrans%}">
                                CAT
                            </a>
                        </div>
                        <div id="en">
                            <a href="{{path("diplonautic_landing_homepage", { "_locale" : "en" })}}" {% if app.request.locale == 'en'%}class="active"{% endif %} title="{%trans%}languages.en{%endtrans%}">
                                EN
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
