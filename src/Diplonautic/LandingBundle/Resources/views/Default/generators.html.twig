{% extends 'DiplonauticLandingBundle::layout.html.twig' %}
{%trans_default_domain 'general'%}
{% block content %}
    {% include "DiplonauticLandingBundle:Default:header.html.twig" %}    
    <div class="main">
        <section>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-10 col-xs-offset-1 col-sm-11 col-sm-offset-0 main-description-product">
                        <div class="row">
                            <div class="col-sm-1">
                                <img src="{{ asset("bundles/diplonauticlanding/images/Picto4.png")}}" alt="">
                            </div>
                            <div class="col-sm-10 col-sm-offset-1">
                                <h1 class="h4">{%trans%}products.gen.title{%endtrans%}</h1>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-5 col-sm-offset-2">
                                <p>{%trans%}generators.intro{%endtrans%}
                                    <ul>
                                        <li>{%trans%}generators.mono_grups{%endtrans%}</li>
                                        <li>{%trans%}generators.tri_grups{%endtrans%}</li>
                                        <li>{%trans%}generators.paralel{%endtrans%}</li>
                                    </ul>
                                </p>
                            </div>
                            <div class="col-sm-5">
                                <p>{%trans%}generators.closing{%endtrans%}</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-1 languages hidden-xs">
                        <div id="cat">
                            <a href="{{path("diplonautic_landing_homepage", { "_locale" : "ca" })}}" {% if app.request.locale == 'ca'%}class="active"{% endif %}>
                                CAT
                            </a>
                        </div>
                        <div id="en">
                            <a href="{{path("diplonautic_landing_homepage", { "_locale" : "en" })}}" {% if app.request.locale == 'en'%}class="active"{% endif %}>
                                EN
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
