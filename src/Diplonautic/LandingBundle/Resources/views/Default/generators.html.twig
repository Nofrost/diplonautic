{% extends 'DiplonauticLandingBundle::layout.html.twig' %}
{%trans_default_domain 'general'%}
{% block meta_description %}{%trans%}meta.gn{%endtrans%}{% endblock %}
{% block meta_title %}{%trans%}tooltip.gen{%endtrans%} - Diplonautic{% endblock %}
{% block title %}{%trans%}tooltip.gen{%endtrans%} - Diplonautic{% endblock %}
{% block meta %}
    <meta property="og:title" content="{%trans%}tooltip.gen{%endtrans%} - Diplonautic" />
    <meta property="og:url" content="http://www.diplonautic.com{{path(app.request.attributes.get('_route'),
                       app.request.attributes.get('_route_params'))}}" />
    <meta property="og:description" content="{%trans%}meta.gn{%endtrans%}" />
    <meta property="og:site_name" content="Diplonautic" />
{% endblock %}
{% block content %}
    {% include "DiplonauticLandingBundle:Default:header.html.twig" %}    
    <div class="main">
        <section>
            <div class="container-fluid">
                <div class="row">
                    <div class="main-index no-padding col-sm-11">
                        <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-0 col-md-8 main-description-product">
                            <div class="row">
                                <div class="col-sm-1 special-picto">
                                    <img src="{{ asset("bundles/diplonauticlanding/images/Picto4.png")}}" alt="{%trans%}products.gen.title{%endtrans%} - Diplonautic">
                                </div>
                                <div class="col-sm-10 product-title">
                                    <h1 class="h4">{%trans%}products.gen.title{%endtrans%}</h1>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-5 product-description">
                                    <p>{%trans%}generators.intro{%endtrans%}
                                        <ul>
                                            <li>{%trans%}generators.mono_grups{%endtrans%}</li>
                                            <li>{%trans%}generators.tri_grups{%endtrans%}</li>
                                            <li>{%trans%}generators.paralel{%endtrans%}</li>
                                        </ul>
                                    </p>
                                </div>
                                <div class="col-sm-5">
                                    <p>{%trans%}generators.closing{%endtrans%}</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-10 col-xs-offset-1 col-sm-2 col-sm-offset-0 col-md-4 main-marks-products p-t-30">
                            <div class="row">
                                    <a href="http://www.stamegna.com" title="{%trans%}visit{%endtrans%} Stamegna" rel="nofollow">
                                        <img class="pull-left text-center three m-t-30" src="{{ asset("bundles/diplonauticlanding/images/Stamegna.png") }}" alt="Stamegna">
                                    </a>
                                    <a href="http://www.victronenergy.com.es/" title="{%trans%}visit{%endtrans%} Victron Energy" rel="nofollow">
                                        <img class="pull-left text-center three m-t-30" src="{{ asset("bundles/diplonauticlanding/images/VictronEnergy.jpg") }}" alt="VictronEnergy">
                                    </a>
                                    <a href="http://www.volpitecno.com/generatori_marini.aspx?language=en" title="{%trans%}visit{%endtrans%} Paguro Generators" rel="nofollow">
                                        <img class="pull-left text-center three"src="{{ asset("bundles/diplonauticlanding/images/Paguro-Generators.jpg") }}" alt="Paguro Generators">
                                    </a>
                            </div>        
                        </div>
                    </div>
                    {% include "DiplonauticLandingBundle:Default:language.html.twig" %}
                </div>
            </div>
        </section>
    </div>
{% endblock %}
