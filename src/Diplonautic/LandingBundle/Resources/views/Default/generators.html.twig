{% extends 'DiplonauticLandingBundle::layout.html.twig' %}
{%trans_default_domain 'general'%}
{% block content %}
    {% include "DiplonauticLandingBundle:Default:header.html.twig" %}    
    <div class="main">
        <section>
            <div class="container-fluid">
                <div class="row">
                    <div class="main-index pad-left col-sm-11">
                        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-0 main-description-product">
                            <div class="row">
                                <div class="col-sm-1">
                                    <img src="{{ asset("bundles/diplonauticlanding/images/Picto4.png")}}" alt="{%trans%}products.gen.title{%endtrans%} - Diplonautic">
                                </div>
                                <div class="col-sm-10 product-title">
                                    <h1 class="h4">{%trans%}products.gen.title{%endtrans%}</h1>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-5 product-description">
                                    <p>{%trans%}generators.intro{%endtrans%}
                                        <ul>
                                            <li>{%trans%}generators.mono_grups{%endtrans%}</li>
                                            <li>{%trans%}generators.tri_grups{%endtrans%}</li>
                                            <li>{%trans%}generators.paralel{%endtrans%}</li>
                                        </ul>
                                    </p>
                                </div>
                                <div class="col-sm-5">
                                    <p>{%trans%}generators.closing{%endtrans%}</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-10 col-xs-offset-1 col-sm-4 col-sm-offset-0 main-marks-products">
                            <div class="row">
                                    <a href="http://www.volpitecno.com/generatori_marini.aspx?language=en" title="{%trans%}visit{%endtrans%} Paguro Generators">
                                        <img class="pull-left text-center two"src="{{ asset("bundles/diplonauticlanding/images/Paguro-Generators.jpg") }}" alt="Paguro Generators">
                                    </a>
                                    <a href="http://www.victronenergy.com.es/" title="{%trans%}visit{%endtrans%} Victron Energy">
                                        <img class="pull-left text-center two" src="{{ asset("bundles/diplonauticlanding/images/VictronEnergy.jpg") }}" alt="VictronEnergy">
                                    </a>
                                    
                            </div>
                            <div class="row">
                                    <a href="https://www.northern-lights.com/" title="{%trans%}visit{%endtrans%} Northern Lights">
                                        <img class="pull-left text-center two"src="{{ asset("bundles/diplonauticlanding/images/NorthernLights.png") }}" alt="Northern Lights">
                                    </a>
                                    
                                    <a href="">
                                        <img class="pull-left text-center two" src="{{ asset("bundles/diplonauticlanding/images/Stamegna.png") }}" alt="Stamegna">
                                    </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-1 languages hidden-xs">
                        <div id="cat">
                            <a href="{{path("diplonautic_landing_homepage", { "_locale" : "ca" })}}" {% if app.request.locale == 'ca'%}class="active"{% endif %} title="{%trans%}languages.cat{%endtrans%}">
                                CAT
                            </a>
                        </div>
                        <div id="en">
                            <a href="{{path("diplonautic_landing_homepage", { "_locale" : "en" })}}" {% if app.request.locale == 'en'%}class="active"{% endif %} title="{%trans%}languages.en{%endtrans%}">
                                EN
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
