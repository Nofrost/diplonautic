{% extends 'DiplonauticLandingBundle::layout.html.twig' %}
{%trans_default_domain 'general'%}
{% block meta_description %}{%trans%}meta.mp{%endtrans%}{% endblock %}
{% block title %}{%trans%}tooltip.ms{%endtrans%} - Diplonautic{% endblock %}
{% block content %}
    {% include "DiplonauticLandingBundle:Default:header.html.twig" %}    
    <div class="main">
        <section>
            <div class="container-fluid">
                <div class="row">
                    <div class="main-index pad-left col-sm-11">
                        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-0 main-description-product">
                            <div class="row">
                                <div class="col-sm-1">
                                    <img src="{{ asset("bundles/diplonauticlanding/images/Picto6.png")}}" alt="{%trans%}products.ms.title{%endtrans%} - Diplonautic">
                                </div>
                                <div class="col-sm-10 product-title">
                                    <h1 class="h4">{%trans%}products.ms.title{%endtrans%}</h1>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-5 product-description">
                                    <p>{%trans%}propeller.intro{%endtrans%}<br><br>
                                    <span>{%trans%}propeller.proa{%endtrans%}</span>
                                    <ul>
                                            <li>{%trans%}propeller.fixed{%endtrans%}</li>
                                            <li>{%trans%}propeller.electric{%endtrans%}</li>
                                    </ul>
                                    <span>{%trans%}propeller.variable{%endtrans%}</span>
                                    </p>
                                </div>
                                <div class="col-sm-5">
                                    <p>{%trans%}propeller.closing{%endtrans%}</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-10 col-xs-offset-1 col-sm-4 col-sm-offset-0 main-marks-products">
                            <div class="row">
                                    <a href="http://www.max-power.com/" title="{%trans%}visit{%endtrans%} Max Power">
                                        <img class="pull-left three" src="{{ asset("bundles/diplonauticlanding/images/MAXPower.png") }}" alt="Max Power">
                                    </a>
                                    <a href="http://www.wesmar.com/index" title="{%trans%}visit{%endtrans%} Wesmar">
                                        <img class="pull-left three" src="{{ asset("bundles/diplonauticlanding/images/Wesmar.png") }}" alt="Wesmar">
                                    </a>
                            </div>
                        </div>        
                    </div>
                    <div class="col-sm-1 languages hidden-xs">
                        <div id="cat">
                            <a href="{{path("diplonautic_landing_homepage", { "_locale" : "ca" })}}" {% if app.request.locale == 'ca'%}class="active"{% endif %} title="{%trans%}languages.cat{%endtrans%}">
                                CAT
                            </a>
                        </div>
                        <div id="en">
                            <a href="{{path("diplonautic_landing_homepage", { "_locale" : "en" })}}" {% if app.request.locale == 'en'%}class="active"{% endif %} title="{%trans%}languages.en{%endtrans%}">
                                EN
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
