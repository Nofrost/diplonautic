{% extends 'DiplonauticLandingBundle::layout.html.twig' %}
{%trans_default_domain 'general'%}
{% block content %}
    {% include "DiplonauticLandingBundle:Default:header.html.twig" %}    
    <div class="main">
        <section>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-11 main-description-product">
                        <div class="row">
                            <div class="col-sm-1">
                                <img src="{{ asset("bundles/diplonauticlanding/images/Picto4.png")}}" alt="">
                            </div>
                            <div class="col-sm-10 product-title">
                                <h1 class="h4">{%trans%}products.wt.title{%endtrans%}</h1>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-5 product-description">
                                <p>{%trans%}water.intro{%endtrans%}
                                    <ul>
                                        <li>{%trans%}water.e_recover{%endtrans%}</li>
                                        <li>{%trans%}water.dc{%endtrans%}</li>
                                    </ul>
                                </p>
                            </div>
                            <div class="col-sm-5">
                                <p>{%trans%}water.closing{%endtrans%}</p>
                                <p class="link-products">{%trans%}water.message_link{%endtrans%}<a href="#"><strong>LINK</strong></a></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-1 languages hidden-xs">
                        <div id="cat">
                            <a href="{{path("diplonautic_landing_homepage", { "_locale" : "ca" })}}" {% if app.request.locale == 'ca'%}class="active"{% endif %} title="{%trans%}languages.cat{%endtrans%}">
                                CAT
                            </a>
                        </div>
                        <div id="en">
                            <a href="{{path("diplonautic_landing_homepage", { "_locale" : "en" })}}" {% if app.request.locale == 'en'%}class="active"{% endif %} title="{%trans%}languages.en{%endtrans%}">
                                EN
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
